@model RentACarWebApp.ViewModels.RezervacijeViewModel
@{
    ViewBag.Title = "Rezervacije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rezervacije</h2>
<hr />

@using (@Html.BeginForm("Rezervacije", "Home", FormMethod.Post))
{
    foreach (var rezervacija in Model.SveRezervacije)
    {

<div class="invisible">@rezervacija.Id</div>
<div class="row">
    <div class="col-2">
        <h5>@rezervacija.ModelAutomobila.Brend @rezervacija.ModelAutomobila.Model</h5>


        <div class="col-md-3 col-lg-3 hidden-xs hidden-sm">
            <img src="~/images/@rezervacija.ModelAutomobila.Slika" alt="slikica" style="width:200px" />
        </div>

    </div>
    <div class="col-3">
        <div class="text-center">
            <a href="/Korisnik/ViewSingle/@rezervacija.Korisnik.Id"><h5>@rezervacija.Korisnik.Ime @rezervacija.Korisnik.Prezime</h5></a>

            <div class="text-center">
                <img src="~/images/user2.jpg" alt="user" style="width:80px" />
            </div>
        </div>
    </div>
    <div class="col-6">
        <div>
            @Html.TextBoxFor(model => rezervacija.BrojVozila, new { disabled = "disabled", @readonly = "readonly" })

            <label for="cf-1">Broj zahtevanih vozila</label>
        </div>
        <div>
            @Html.TextBoxFor(model => rezervacija.UkupnoZaduzenje, new { disabled = "disabled", @readonly = "readonly" })
    
            <label for="cf-1">Ukupno zaduzenje</label>
        </div>

            <div class="col-lg-6">
                <a href="/Home/FinishRezervacije/@rezervacija.Id" class="btn btn-success">Potvrdi rezervaciju</a>
            </div>

    </div>

</div>
<hr />
    }//kraj rezervacije


}