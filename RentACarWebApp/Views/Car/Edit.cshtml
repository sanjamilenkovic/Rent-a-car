@model RentACarWebApp.ViewModels.CarViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>

    <div class="panel-body">

        <div class="row">
            <div class="col-4">

                <div class="col-md-3 col-lg-3 hidden-xs hidden-sm">
                    <img src="~/Images/@Model.sviAtributiAutomobila["Slika"]" alt="slikica" style="width:400px" />
                </div>
                <div style="height:100px">

                </div>


            </div>

            <div class="col-2">
            </div>

            @using (Html.BeginForm("Edit", "Car"))
            {

                <div class="col-9">
                    <strong style="font-size:large">Detalji o vozilu</strong><br>
                    <table class="table table-user-information">
                        <tbody>
                            @foreach (var a in Model.sviAtributiAutomobila)
                            {
                            <tr>
                                <td>@a.Key</td>
                                <td>@Html.EditorFor(model => model.sviAtributiAutomobila[a.Key])</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            }


        </div>
    </div>
</body>



















